import javafx.application.Application;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.Pane;
import javafx.scene.layout.StackPane;
import javafx.stage.Stage;

public class Main extends Application {

    public static void main(String[] args) {
        launch(args);
    }

    @Override
    public void start(Stage stage) throws Exception {
        Menager_LogIn logIn = new Menager_LogIn();
        Button manager = new Button("Manager");
        manager.setLayoutX(70);
        manager.setLayoutY(520);
        manager.setMinSize(60, 30);
        manager.setPrefSize(100, 70);
        manager.setOnAction(e -> logIn.showStage());
        Button client = new Button("Client");
        client.setLayoutX(300);
        client.setLayoutY(520);
        client.setMinSize(60, 30);
        client.setPrefSize(100,70);
        
        Pane pane = new Pane();
        pane.getChildren().addAll(manager,client); 
        Scene scene = new Scene(pane, 600, 600);
        stage.setScene(scene);
        stage.show();
    }

}
