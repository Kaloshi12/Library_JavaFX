import javafx.application.Application;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.StackPane;
import javafx.stage.Stage;

public class Main extends Application {

    public static void main(String[] args) {
        launch(args);
    }

    @Override
    public void start(Stage stage) throws Exception {
        stage.setTitle("Title");

        Button next = new Button("Next");
        next.setMinSize(60, 30);
        next.setPrefSize(150, 70);
        next.setOnAction(e-> openStage(stage));

        StackPane pane = new StackPane();
        pane.getChildren().add(next);
        StackPane.setAlignment(next, Pos.TOP_RIGHT);  // Align the button to the top-left corner

        Scene scene = new Scene(pane, 600, 600);
        stage.setScene(scene);
        stage.show();
    }

	public void openStage(Stage stage) {
		Stage stage2 = new Stage();
		Button back = new Button("Back");
		back.setPrefSize(50, 25);
		back.setOnAction(e -> {
			stage2.close();
			stage.show();
		});
		StackPane pane = new StackPane();
		pane.getChildren().add(back);
		StackPane.setAlignment(back,Pos.BOTTOM_LEFT);
		 
		stage2.setScene(new Scene(pane,600,600));
		stage2.show();
		
	}
}
