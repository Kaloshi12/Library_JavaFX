import javafx.animation.KeyFrame;
import javafx.animation.KeyValue;
import javafx.animation.Timeline;
import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.Pane;
import javafx.scene.paint.Color;
import javafx.scene.text.Text;
import javafx.scene.text.TextAlignment;
import javafx.stage.Stage;
import javafx.util.Duration;

public class Main extends Application {

    public static void main(String[] args) {
        launch(args);
    }

    @Override
    public void start(Stage stage) throws Exception {
        Menager_LogIn logIn = new Menager_LogIn();
        Button manager = new Button("Manager");
        manager.setLayoutX(70);
        manager.setLayoutY(450);
        manager.setMinSize(60, 30);
        manager.setPrefSize(200, 70);
        manager.setOnAction(e -> logIn.showStage());

        Button client = new Button("Client");
        client.setLayoutX(300);
        client.setLayoutY(450);
        client.setMinSize(60, 30);
        client.setPrefSize(200, 70);
        
        Text welcome = new Text();
        welcome.setText("Welcome to library");
        welcome.setTextAlignment(TextAlignment.CENTER);
        welcome.setFill(Color.BLACK);
        welcome.setFont(new javafx.scene.text.Font(20));
        welcome.setLayoutX(150);
        welcome.setLayoutY(300);
        
        Pane pane = new Pane();
        pane.getChildren().addAll(manager, client,welcome);
        Scene scene = new Scene(pane, 600, 600);

      
        Timeline timeline = new Timeline(
                new KeyFrame(Duration.ZERO, new KeyValue(pane.styleProperty(), "-fx-background-color:lightgoldenrodyellow;")),
                new KeyFrame(Duration.seconds(1), new KeyValue(pane.styleProperty(), "-fx-background-color: lightblue;")),
                new KeyFrame(Duration.seconds(3), new KeyValue(pane.styleProperty(), "-fx-background-color: lightgreen;")),
                new KeyFrame(Duration.seconds(5), new KeyValue(pane.styleProperty(), "-fx-background-color: lightcoral;")),
                new KeyFrame(Duration.seconds(7), new KeyValue(pane.styleProperty(), "-fx-background-color: lightgoldenrodyellow;")),
                new KeyFrame(Duration.seconds(9), new KeyValue(pane.styleProperty(), "-fx-background-color: lightcoral;")),
                new KeyFrame(Duration.seconds(11), new KeyValue(pane.styleProperty(), "-fx-background-color: lightgreen;")),
                new KeyFrame(Duration.seconds(13), new KeyValue(pane.styleProperty(), "-fx-background-color: lightblue;")),
                new KeyFrame(Duration.seconds(15), new KeyValue(pane.styleProperty(), "fx-backGround-color : lightgoldenrodyellow"))
                
        );

        
        stage.setOnShown(event -> timeline.play());

        stage.setScene(scene);
        stage.show();
    }
}
